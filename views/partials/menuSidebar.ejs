<div class="sidebar">
  <div class="logo_content">
    <div class="logo">
      <img src="/images/logo.png" />
      <div class="logo_name">MPDASS</div>
    </div>
    <i class="bx bx-menu" id="btn"></i>
  </div>
  <ul class="nav_list">
    <li>
      <a href="/index">
        <i class="bx bx-home"></i>
        <span class="links_name">HOME</span>
      </a>
      <span class="tooltip">home</span>
    </li>
    <li>
      <a href="/yourmusic">
        <i class="bx bx-user"></i>
        <span class="links_name">YOUR MUSIC</span>
      </a>
      <span class="tooltip">your music</span>
    </li>
    <li>
      <a href="/whatspopular">
        <i class="bx bx-music"></i>
        <span class="links_name">WHAT'S POPULAR</span>
      </a>
      <span class="tooltip">what's popular</span>
    </li>
    <% if(user.role === "admin") { %>
    <li>
      <a href="/adminusers">
        <i class="bx bx-low-vision"></i>
        <span class="links_name">ONLY ADMINS</span>
      </a>
      <span class="tooltip">admin</span>
    </li>
    <% } %>
    <li>
      <a href="/about">
        <i class="bx bx-align-right"></i>
        <span class="links_name">ABOUT</span>
      </a>
      <span class="tooltip">about</span>
    </li>
    <li>
      <a href="/settings">
        <i class="bx bxs-lock"></i>
        <span class="links_name">SETTINGS</span>
      </a>
      <span class="tooltip">settings</span>
    </li>
  </ul>
  <div class="profile_content">
    <div class="profile">
      <div class="profile_details">
        <img src="/images/profile.jpg" alt="" />
        <div class="name_job">
          <% if(locals.email) { %>
          <div class="name"><%= email %></div>
          <% } else {%>
          <div class="name"><%= user.email %></div>
          <% }%>

          <!-- <div class="name"><%= user.email %></div> -->
          <% if(user.role === "admin") { %>
          <div class="job">Role: <%= user.role %></div>
          <% } else {%>
          <div class="job">Role: not admin</div>
          <% }%>
        </div>
      </div>
      <div class="profile-logout">
        <form action="/logout" method="POST">
          <button type="submit" class="bx bx-log-out" id="log_out"></button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Script of sidebar movement -->
<script>
  let btn = document.querySelector("#btn");
  let sidebar = document.querySelector(".sidebar");
  let searchBtn = document.querySelector(".bx-search");
  btn.onclick = function () {
    sidebar.classList.toggle("active");
  };
  searchBtn.onclick = function () {
    sidebar.classList.toggle("active");
  };
</script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
