<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="styleQuiz.css" rel="stylesheet" />
    <script defer src="script.js"></script>
    <title>Quiz App</title>
  </head>
  <body>
    <div class="container">
      <div id="question-container" class="">
        <div id="question">
          <%= JSON.stringify(options[0].Ques).replace(/['"]+/g, '')%>
        </div>
        <div id="answer-buttons" class="btn-grid">
          <button class="btn">
            <%= JSON.stringify(options[0].Op1).replace(/['"]+/g, '')%>
          </button>
          <!--JSON string needs to be sent to script file and from there...-->
          <button class="btn">
            <%= JSON.stringify(options[0].Op2).replace(/['"]+/g, '')%>
          </button>
          <!--... is where we should be putting the questions and answers in...-->
          <button class="btn">
            <%= JSON.stringify(options[0].Op3).replace(/['"]+/g, '')%>
          </button>
          <!--... around line 97 using getElemntById -->
          <button class="btn">
            <%= JSON.stringify(options[0].Op4).replace(/['"]+/g, '')%>
          </button>
        </div>
      </div>
      <div class="controls">
        <button id="start-btn" class="start-btn btn">Start</button>
        <!--add on click hide-->
        <button id="next-btn" class="next-btn btn hide">Next</button>
      </div>
    </div>
  </body>
</html>
