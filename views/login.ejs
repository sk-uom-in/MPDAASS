<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/823a646e27.js"
      crossorigin="anonymous"
    ></script>
    <% if (locals.mode) { %>
    <script>
      function runOnload() {
        const mode = "<%= mode %>";
        if (mode === "register") {
          container.classList.add("sign-up-mode");
        }
        //alert(mode);
      }
    </script>
    <% } %>
    <title>MPDASS</title>
    <link rel="stylesheet" href="style/loginstyle.css" />
  </head>
  <body onload="runOnload()">
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="/login" method="POST" class="sign-in-form">
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" placeholder="Email" id="email" name="email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                placeholder="Password"
                id="password"
                name="password"
              />
            </div>
            <% if (locals.messageUserRegistered) { %>
            <h4 class="alert alert-danger mt-4">
              <%= messageUserRegistered %>
            </h4>
            <% } %> <% if(error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <input type="submit" value="Login" class="btn solid" />
          </form>
          <form action="/register" method="POST" class="sign-up-form">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" placeholder="Username" id="name" name="name" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" placeholder="Email" id="email" name="email" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input
                type="password"
                placeholder="Password"
                id="password"
                name="password"
              />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input
                type="password"
                placeholder="ConfirmPassword"
                id="passwordConfirm"
                name="passwordConfirm"
              />
            </div>
            <% if (locals.messageRegisterError) { %>
            <h4 class="alert alert-danger mt-4"><%= messageRegisterError %></h4>
            <% } %>
            <input type="submit" value="Sign up" class="btn solid" />
          </form>
        </div>
      </div>
      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here?</h3>
            <p>
              Your first time visiting our page? Sign up for an unforgetable
              experience at MPDASS.
            </p>
            <button class="btn transparent" id="sign-up-btn">Sign up</button>
          </div>
          <img src="/images/login1.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              If you already signed up at our website, you may want to sign in!
            </p>
            <button class="btn transparent" id="sign-in-btn">Sign in</button>
          </div>
          <img src="/images/login2.svg" class="image" alt="" />
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      const sign_in_btn = document.querySelector("#sign-in-btn");
      const sign_up_btn = document.querySelector("#sign-up-btn");
      const container = document.querySelector(".container");
      sign_up_btn.addEventListener("click", () => {
        container.classList.add("sign-up-mode");
      });
      sign_in_btn.addEventListener("click", () => {
        container.classList.remove("sign-up-mode");
      });
    </script>
  </body>
</html>
